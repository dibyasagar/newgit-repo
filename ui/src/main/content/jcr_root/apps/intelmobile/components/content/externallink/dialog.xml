<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Dialog"
    width="100%"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="External Link">
                <items jcr:primaryType="cq:WidgetCollection">
                    <filteritems
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./externallinks"
                        fieldDescription="Click the '+' to add a new filter item."
                        fieldLabel="External Links"
                        maxItems="12"
                        name="./externallinks"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <displaycopy
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                fieldLabel="Display Copy"
                                name="./displaycopy"
                                xtype="textfield"/>
                            <link
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                editable="{Boolean}true"
                                fieldLabel="External Link"
                                name="./link"
                                predicate="hierarchy"
                                xtype="pathfield"/>
                            <sameornewwindow
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue="no"
                                fieldLabel="Open in new window"
                                name="./newwindow"
                                type="select"
                                value="no"
                                width="20"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                                    <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                </options>
                            </sameornewwindow>
                            <buttoncolor
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue="no"
                                fieldLabel="Button Color"
                                name="./buttonColor"
                                type="select"
                                value="grey"
                                width="20"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <blue
                                        jcr:primaryType="nt:unstructured"
                                        text="Blue"
                                        value="blue"/>
                                    <grey
                                        jcr:primaryType="nt:unstructured"
                                        text="Grey"
                                        value="grey"/>
                                </options>
                            </buttoncolor>
                        </fieldConfig>
                    </filteritems>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
