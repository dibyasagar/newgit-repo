<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Showcase Heading"
    width="100%"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Config">
                <items jcr:primaryType="cq:WidgetCollection">
                    <producttitle
                        jcr:primaryType="nt:unstructured"
                        allowBlank="{Boolean}false"
                        fieldDescription="Title of the Product."
                        fieldLabel="Product Title"
                        name="./title"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <headingcopy
                        jcr:primaryType="nt:unstructured"
                        allowBlank="{Boolean}false"
                        fieldDescription="Content heading  of the tab."
                        fieldLabel="Heading of Content"
                        name="./headingcopy"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <bodytextcopy
                        jcr:primaryType="nt:unstructured"
                        allowBlank="{Boolean}false"
                        fieldDescription="Content body of the tab."
                        fieldLabel="Body Text copy"
                        grow="true"
                        name="./bodytext"
                        validateOnBlur="true"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </bodytextcopy>
                    <linkCopy
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link Display Copy"
                        name="./linkCopy"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <linkUrl
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        editable="{Boolean}true"
                        fieldLabel="Link Url"
                        name="./linkUrl"
                        predicate="hierarchy"
                        xtype="pathfield"/>
                    <sameornewwindow
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue="no"
                        fieldLabel="Open in new window"
                        name="./newwindow"
                        type="select"
                        width="20"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="no"/>
                            <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="yes"/>
                        </options>
                    </sameornewwindow>
                    <imagealttext
                        jcr:primaryType="nt:unstructured"
                        allowBlank="{Boolean}false"
                        fieldDescription="Alt Text for Image"
                        fieldLabel="Image Alt Text"
                        name="./alttext"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <displaysocial
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue="no"
                        fieldLabel="Display Social"
                        name="./displaysocial"
                        type="select"
                        value="no"
                        width="20"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="no"/>
                            <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="yes"/>
                        </options>
                    </displaysocial>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                ddGroups="[media]"
                fileNameParameter="./heroimageFileName"
                fileReferenceParameter="./heroimageReference"
                id="imagefield"
                name="./contentImage"
                title="Hero Image"
                xtype="smartimage"/>
        </items>
    </items>
</jcr:root>
