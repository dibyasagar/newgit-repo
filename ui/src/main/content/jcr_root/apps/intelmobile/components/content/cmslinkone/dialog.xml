<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="CMS Link One"
    width="100%"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Config">
                <items jcr:primaryType="cq:WidgetCollection">
                    <linkdisplayCopy
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link Copy"
                        maxLengthText="The maximum length for this field is 60"
                        name="./linkdisplayCopy"
                        xtype="textfield"/>
                    <linkUrl
                        jcr:primaryType="cq:Widget"
                        editable="{Boolean}true"
                        fieldLabel="Link Url"
                        name="./linkUrl"
                        predicate="hierarchy"
                        xtype="pathfield"/>
                    <sameornewwindow
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue="no"
                        fieldLabel="Open in new window"
                        name="./newwindow"
                        type="select"
                        value="no"
                        width="20"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="no"/>
                            <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="yes"/>
                        </options>
                    </sameornewwindow>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                ddGroups="[media]"
                fileNameParameter="./imgFileName"
                fileReferenceParameter="./imgFileReference"
                name="./contentImg"
                title="Image"
                xtype="smartimage"/>
        </items>
    </items>
</jcr:root>
