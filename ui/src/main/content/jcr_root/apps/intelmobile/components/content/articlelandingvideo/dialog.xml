<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Article Video"
    width="100%"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <pagelisttab
                jcr:primaryType="cq:Panel"
                title="Article Video">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hero
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./articlelandingvideo"
                        fieldDescription="Click '+' to add a new video"
                        fieldLabel="Article Video"
                        maxItems="6"
                        name="./articlelandingvideo"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <videoid
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="Video ID (You Tube)"
                                name="./videoid"
                                xtype="textfield"/>
                            <title
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                fieldLabel="Heading"
                                name="./title"
                                xtype="textfield"/>
                            <subheading
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Sub Heading Text."
                                fieldLabel="Sub Heading Text"
                                grow="true"
                                name="./subheading"
                                validateOnBlur="true"
                                xtype="textarea"/>
                        </fieldConfig>
                    </hero>
                </items>
            </pagelisttab>
        </items>
    </items>
</jcr:root>
