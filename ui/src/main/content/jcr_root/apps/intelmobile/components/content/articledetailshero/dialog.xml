<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Article Details Hero Component"
    width="100%"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Section Details">
                <items jcr:primaryType="cq:WidgetCollection">
                    <imagedetail
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}false"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <imagealt
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image alt text"
                                name="./alttext"
                                xtype="textfield"/>
                            <displaysocial
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue="yes"
                                fieldLabel="Display Social"
                                name="./displaysocial"
                                type="select"
                                value="no"
                                width="20"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                                    <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                </options>
                            </displaysocial>
                        </items>
                    </imagedetail>
                    <contentsection
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Content Section"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <sectiontitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Title"
                                name="./sectiontitle"
                                xtype="textfield"/>
                            <description
                                jcr:primaryType="cq:Widget"
                                boxMaxHeight="200"
                                boxMaxWidth="500"
                                fieldLabel="Description"
                                name="./description"
                                validateOnBlur="true"
                                xtype="richtext">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <styles
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <lists
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                            </description>
                        </items>
                    </contentsection>
                    <linksection
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Link Section"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <linkurl
                                jcr:primaryType="cq:Widget"
                                editable="{Boolean}true"
                                fieldLabel="Link URL"
                                name="./linkurl"
                                predicate="hierarchy"
                                rootPath="/content"
                                xtype="pathfield"/>
                            <linklabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Link Label"
                                name="./linklabel"
                                xtype="textfield"/>
                            <sameornewwindow
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                defaultValue="no"
                                fieldLabel="New Window"
                                name="./newwindow"
                                type="select"
                                value="no"
                                width="20"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                                    <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                </options>
                            </sameornewwindow>
                        </items>
                    </linksection>
                    <downloadsection
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Download Section"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <downloadlink
                                jcr:primaryType="cq:Widget"
                                editable="{Boolean}true"
                                fieldLabel="Browse PDF"
                                name="./downloadURL"
                                predicate="hierarchy"
                                rootPath="/content/dam"
                                xtype="pathfield"/>
                            <downlaodlabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Download Label"
                                name="./downloadtitle"
                                xtype="textfield"/>
                        </items>
                    </downloadsection>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                ddGroups="[media]"
                fileNameParameter="./imageFileName"
                fileReferenceParameter="./imagePath"
                id="imagefield"
                name="./contentImage"
                title="Image"
                xtype="smartimage"/>
        </items>
    </items>
</jcr:root>
