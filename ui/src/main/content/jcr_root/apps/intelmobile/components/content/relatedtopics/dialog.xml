<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Dialog"
    width="100%"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <pagelist_x0020_tab
                jcr:primaryType="cq:Panel"
                title="Related Topics">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Heading"
                        name="./title"
                        xtype="textfield"/>
                    <suggestions
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./relatedtopics"
                        fieldDescription="Click '+' to add a new hero"
                        fieldLabel="Suggested Links"
                        maxItems="6"
                        name="./relatedtopics"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <linkcopy
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                fieldLabel="Link Copy"
                                name="./linkcopy"
                                xtype="textfield"/>
                            <linkurl
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                editable="{Boolean}false"
                                fieldLabel="Link URL"
                                name="./linkurl"
                                xtype="pathfield"/>
                        </fieldConfig>
                    </suggestions>
                </items>
            </pagelist_x0020_tab>
        </items>
    </items>
</jcr:root>
