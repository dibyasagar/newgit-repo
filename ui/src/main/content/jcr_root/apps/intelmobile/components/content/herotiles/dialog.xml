<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Hero Tiles"
    width="100%"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <general
                jcr:primaryType="cq:Panel"
                title="Hero Tiles">
                <items jcr:primaryType="cq:WidgetCollection">
                    <layout
                        jcr:primaryType="cq:Widget"
                        defaultValue="layout1"
                        fieldLabel="Layout Type"
                        name="./layouttype"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <layout1
                                jcr:primaryType="nt:unstructured"
                                text="layout1"
                                value="layout1"/>
                            <layout2
                                jcr:primaryType="nt:unstructured"
                                text="layout2"
                                value="layout2"/>
                            <layout3
                                jcr:primaryType="nt:unstructured"
                                text="layout3"
                                value="layout3"/>
                        </options>
                    </layout>
                    <defaultimage
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Default Image"
                        name="./defaultimage"
                        xtype="pathfield"/>
                    <truncatechar
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Truncate Copytext after no.of characters"
                        name="./truncatechar"
                        regex="/^[0-9]{0,2}$/"
                        regexText="Enter Numbers Upto 2 Digits only."
                        xtype="textfield"/>
                    <siteguidetile
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./siteguidetile"
                        fieldDescription="Click the '+' to add a new Link."
                        filedLabel="Hero Tiles Options"
                        maxItems="12"
                        name="./siteguidetile"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <Copy_x0020_Text
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                fieldLabel="Copy Text"
                                name="./copytext"
                                xtype="textfield"/>
                            <internal_x0020_url
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                editable="{Boolean}true"
                                fieldLabel="Internal URL"
                                name="./internalUrl"
                                predicate="hierarchy"
                                xtype="pathfield"/>
                            <image
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Select Image"
                                name="./image"
                                regex="/^.+(.jpg|.JPG|.gif|.GIF|.jpeg|.JPEG|.bmp|.BMP|.png|.PNG)$/"
                                regexText="Please select Image files only"
                                rootPath="/content/dam"
                                xtype="pathfield"/>
                        </fieldConfig>
                    </siteguidetile>
                </items>
            </general>
        </items>
    </items>
</jcr:root>
