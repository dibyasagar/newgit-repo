<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Drawer Tab"
    width="100%"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Drawer">
                <items jcr:primaryType="cq:WidgetCollection">
                    <contentstyle
                        jcr:primaryType="cq:Widget"
                        defaultValue="genericcontentpshowcase"
                        fieldLabel="Content Style"
                        name="./contentstyle"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <genericcontentpshowcase
                                jcr:primaryType="nt:unstructured"
                                text="Generic Content Standard"
                                value="genericcontentpshowcase"/>
                            <genericcontentpshowcaseshowmore
                                jcr:primaryType="nt:unstructured"
                                text="Generic Content Standard Expandable"
                                value="genericcontentpshowcaseshowmore"/>
                            <genericcontentpdetail
                                jcr:primaryType="nt:unstructured"
                                text="Generic Content Gradient"
                                value="genericcontentpdetail"/>
                            <genericcontentfeatures
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Applicable only for Features  Style"
                                text="Generic Content Features"
                                value="genericcontentfeatures"/>
                            <imageandvideo
                                jcr:primaryType="nt:unstructured"
                                text="Images &amp; Video"
                                value="imageandvideo"/>
                            <showcaseFeatureSpotlight
                                jcr:primaryType="nt:unstructured"
                                text="Showcase Feature Spotlight"
                                value="showcasefeaturespotlight"/>
                            <cmslink1
                                jcr:primaryType="nt:unstructured"
                                text="CMS Link 1"
                                value="cmslink1"/>
                            <articlelanding
                                jcr:primaryType="nt:unstructured"
                                text="Article Landing/Details Content"
                                value="articlelanding"/>
                            <articlelandingvideo
                                jcr:primaryType="nt:unstructured"
                                text="Article Landing/Details Video"
                                value="articlelandingvideo"/>
                            <articledetailcontent
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Applicable only for Generic Content Standard Expandable Style"
                                text="Article Detail Content Without Drawer"
                                value="articledetailcontent"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(box){ if (this.getValue()==&quot;genericcontentpshowcaseshowmore&quot; || this.getValue()==&quot;articlelanding&quot;){&#x9;box.findParentByType('tabpanel').findByType('selection')[2].enable();} else { box.findParentByType('tabpanel').findByType('selection')[2].disable();}return true;}"
                            selectionchanged="function(box){ if (this.getValue()==&quot;genericcontentpshowcaseshowmore&quot; || this.getValue()==&quot;articlelanding&quot;){&#x9;box.findParentByType('tabpanel').findByType('selection')[2].enable();} else { box.findParentByType('tabpanel').findByType('selection')[2].disable();}return true;}"/>
                    </contentstyle>
                    <title
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="Title of the tab."
                        fieldLabel="Title"
                        maxLengthText="The maximum length for this field is 46"
                        name="./title"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <header
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="Header Text of the tab."
                        fieldLabel="Header Text"
                        grow="true"
                        name="./header"
                        validateOnBlur="true"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </header>
                    <footerdisplaytext
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="Footer display text of the tab."
                        fieldLabel="Footer Display Text"
                        maxLengthText="The maximum length for this field is 70"
                        name="./footertext"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <footerurl
                        jcr:primaryType="cq:Widget"
                        editable="{Boolean}true"
                        fieldDescription="Footer Url of the Tab"
                        fieldLabel="Footer Url"
                        name="./footerurl"
                        predicate="hierarchy"
                        xtype="pathfield"/>
                    <viewlesscopy
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="View Less display text of the tab."
                        fieldLabel="Viewless Display Text"
                        name="./viewlesstext"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <drawerstate
                        jcr:primaryType="cq:Widget"
                        defaultValue="closed"
                        fieldLabel="Default Drawer State"
                        name="./drawerState"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <expanded
                                jcr:primaryType="nt:unstructured"
                                text="Expanded"
                                value="open"/>
                            <collapsed
                                jcr:primaryType="nt:unstructured"
                                text="Collapsed"
                                value="closed"/>
                        </options>
                    </drawerstate>
                    <viewmoredispnum
                        jcr:primaryType="cq:Widget"
                        defaultValue="2"
                        fieldLabel="Show Viewmore After No. of Components"
                        name="./viewmorenum"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <two
                                jcr:primaryType="nt:unstructured"
                                text="Two"
                                value="2"/>
                            <three
                                jcr:primaryType="nt:unstructured"
                                text="Three"
                                value="3"/>
                            <four
                                jcr:primaryType="nt:unstructured"
                                text="four"
                                value="4"/>
                        </options>
                    </viewmoredispnum>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
